{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"jsx": "preserve",
		"lib": ["dom", "es2015", "es2017"],
		"allowJs": false,
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"baseUrl": "src"
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": ["./node_modules", "./public", "./.cache"]
}
